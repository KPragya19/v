<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/Name"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:text="@string/r_name"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        app:layout_constraintEnd_toStartOf="@+id/r_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/r_name"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:text="@string/textview"
        android:textColor="#E91E63"
        android:textStyle="italic"
        android:gravity="start"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:layout_marginTop="120dp"
        android:text="@string/r_address"
        app:layout_constraintEnd_toStartOf="@+id/r_name"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/r_address"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:text="@string/textview"
        android:textColor="#E91E63"
        android:maxLines="4"
        android:textStyle="italic"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speciality"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:textSize="16sp"
        android:letterSpacing="-0.07"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:text="@string/r_speciality"
        app:layout_constraintEnd_toStartOf="@+id/r_name"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/r_speciality"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:text="@string/textview"
        android:textColor="#E91E63"
        android:textStyle="italic"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="@string/r_rating"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/r_name"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/r_rating"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/textview"
        android:maxLines="4"
        android:textColor="#E91E63"
        android:textStyle="italic"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>